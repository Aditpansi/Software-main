<DrawerClickableItem@MDNavigationDrawerItem>:
    focus_color: "#fffff0"
    text_color: "#4a4939"
    icon_color: "#4a4939"
    ripple_color: "#c5bdd2"
    selected_color: "#0496C7"

<DrawerLabelItem@MDNavigationDrawerItem>:
    text_color: "#4a4939"
    icon_color: "#4a4939"
    focus_behavior: False
    selected_color: "#4a4939"
    _no_ripple_effect: True

<MainScreen>:
    MDNavigationLayout:

        MDScreenManager:
            id: screen_manager

            #------------------------------------------- Home Screen --------------------------------------------
            MDScreen:
                name: "home_screen"
                BoxLayout:
                    orientation: "vertical"

                    # Top App Bar
                    MDTopAppBar:
                        title: "ZERO G"
                        elevation: 4
                        pos_hint: {"top": 1}
                        md_bg_color: "#fffff0"
                        specific_text_color: "#4a4939"
                        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
                        right_action_items: [["theme-light-dark", lambda x: app.toggle_theme()]]

                    # ---------------- Icon Grid ----------------
                    MDGridLayout:
                        cols: 6
                        adaptive_height: True
                        spacing: dp(20)
                        padding: dp(20)
                        adaptive_height: True
                        size_hint_y: None
                        height: dp(28)

                        MDRaisedButton:
                            text: "SYS"
                            md_bg_color: 1,1,1,1
                            text_color: 0,0,0,1
                            radius: [20,]

                        MDIconButton:
                            icon: "car-battery"
                        
                        MDIconButton:
                            icon: "alert"
                            theme_icon_color: "Custom"
                            # icon_color: 1,0,0,1
                        
                        MDIconButton:
                            icon: "valve"
                        
                        MDIconButton:
                            icon: "lightbulb"
                        
                        MDIconButton:
                            icon: "tools"


                    MDSeparator:

                    ScrollView:
                        GridLayout:
                            id: load_cells   #  makes it spread horizontally
                            cols: 6
                            padding: dp(10)
                            spacing: dp(10)
                            size_hint_y: None
                            height: self.minimum_height
                    


            #------------------------------------------- Multi-Camera Screen--------------------------------------------
            MDScreen:
                name: "camera_screen"
                BoxLayout:
                    orientation: "vertical"

                    # Top App Bar
                    MDTopAppBar:
                        title: "ZERO G"
                        elevation: 4
                        pos_hint: {"top": 1}
                        md_bg_color: "#fffff0"
                        specific_text_color: "#4a4939"
                        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
                        right_action_items: [["theme-light-dark", lambda x: app.toggle_theme()]]

                    # Camera Grid only
                    GridLayout:
                        cols: 3
                        rows: 2
                        spacing: dp(1.5)
                        padding: dp(10)
                        size_hint_y: 0.9

                        Camera:
                            id: cam1
                            resolution: (640, 480)
                            play: True

                        Camera:
                            id: cam2
                            resolution: (640, 480)
                            play: True

                        Camera:
                            id: cam3
                            resolution: (640, 480)
                            play: True

                        Camera:
                            id: cam4
                            resolution: (640, 480)
                            play: True

                        Camera:
                            id: cam5
                            resolution: (640, 480)
                            play: True

                        Camera:
                            id: cam6
                            resolution: (640, 480)
                            play: True

        

            # ------------------------------------------Info Screen----------------------------------------------------------------------------
            MDScreen:
                name: "info_screen"
                
                BoxLayout:
                    orientation: "vertical"

                    # Top App Bar
                    MDTopAppBar:
                        title: "ZERO G"
                        elevation: 4
                        pos_hint: {"top": 1}
                        md_bg_color: "#fffff0"
                        specific_text_color: "#4a4939"
                        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
                        right_action_items: [["theme-light-dark", lambda x: app.toggle_theme()]]

                    MDLabel:
                        text: "ZERO Gravity Compensation System Software"
                        halign: "center"
                        font_style: "H5"

                    MDLabel:
                        text: "Version: 1.0.0"
                        halign: "center"

                    MDLabel:
                        text: "Developed by Enlivening Technologies"
                        halign: "center"

        MDNavigationDrawer:
            id: nav_drawer
            radius: (0, 16, 16, 0)

            MDNavigationDrawerMenu:

                MDNavigationDrawerHeader:
                    title: "ZERO G"
                    title_color: "#4a4939"
                    text: "By Enlivening Technologies"
                    spacing: "4dp"
                    padding: "12dp", 0, 0, "56dp"

                MDNavigationDrawerLabel:
                    text: "Menu"

                MDNavigationDrawerDivider:
                    
                DrawerClickableItem:
                    icon: "home"
                    text: "Home"
                    on_release:
                        app.root.ids.screen_manager.current = "home_screen"
                        nav_drawer.set_state("close")

                DrawerClickableItem:
                    icon: "camera"
                    text: "Multi-Camera"
                    on_release:
                        app.root.ids.screen_manager.current = "camera_screen"
                        nav_drawer.set_state("close")

                DrawerClickableItem:
                    icon: "information"
                    text: "Info"
                    on_release:
                        app.root.ids.screen_manager.current = "info_screen"
                        nav_drawer.set_state("close")

                DrawerClickableItem:
                    icon: "arrow-left"
                    text: "Back"
                    on_release: nav_drawer.set_state("close")

